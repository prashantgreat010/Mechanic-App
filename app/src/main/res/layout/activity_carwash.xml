<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.prashantmaheshwari.firstapp.Carwash"
    android:background="@drawable/abill"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="330dp"
        android:layout_height="56dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="8dp"
        android:layout_marginStart="13dp"
        android:background="@drawable/rectangle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.512"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.017">

        <Button
            android:id="@+id/enquery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:background="@null"
            android:text="For Service Enquiry"
            android:textSize="18sp" />

        <Button
            android:id="@+id/c12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:background="#ff7310"
            android:text="Call" />

    </LinearLayout>

    <android.support.v7.widget.CardView
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/rectangle"
        android:layout_marginTop="8dp"
        android:layout_marginStart="13dp"
        android:orientation="vertical">


        <Button
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="#000"
            android:text="Car wash and detail"
            android:textAlignment="textStart"
            android:textAllCaps="false"
            android:textColor="#fff" />

        <CheckBox
            android:id="@+id/checkedTextViewrd5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="selectb"
            android:layout_marginTop="55dp"
            android:text="3M polish" />

        <CheckBox
            android:id="@+id/checkedTextViewrd6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="selectb"
            android:layout_marginTop="75dp"
            android:text="A/C gas and oil filter" />

        <CheckBox
            android:id="@+id/checkedTextViewrd7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="selectb"
            android:layout_marginTop="95dp"
            android:text="Interior and exterior cleaning" />

        <CheckBox
            android:id="@+id/checkedTextViewrd8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:onClick="selectb"
            android:text="General car wash" />

        <CheckBox
            android:id="@+id/checkedTextViewrd9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="selectb"
            android:layout_marginTop="115dp"
            android:text="Teflon coating" />

        <CheckBox
            android:id="@+id/checkedTextViewrd10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="selectb"
            android:layout_marginTop="135dp"
            android:text="Eco car wash with wax and vacuum" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginStart="220dp"
            android:layout_marginTop="35dp"
            android:background="@null"
            android:text="Rs.500/-"
            android:textAllCaps="false"
            android:textColor="#1227c6"
            android:textSize="14dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginStart="220dp"
            android:layout_marginTop="55dp"
            android:background="@null"
            android:text="Rs.2300/-"
            android:textAllCaps="false"
            android:textColor="#1227c6"
            android:textSize="14dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginStart="220dp"
            android:layout_marginTop="75dp"
            android:background="@null"
            android:text="Rs.1600/-"
            android:textAllCaps="false"
            android:textColor="#1227c6"
            android:textSize="14dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginStart="220dp"
            android:layout_marginTop="95dp"
            android:background="@null"
            android:text="Rs.1600/-"
            android:textAllCaps="false"
            android:textColor="#1227c6"
            android:textSize="14dp" />

    </android.support.v7.widget.CardView>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="143dp"
        android:layout_marginTop="8dp"
        android:id="@+id/r12"
        android:background="#1227c6"
        android:text="Next"
        android:textColor="#fff"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.782" />


</LinearLayout>
