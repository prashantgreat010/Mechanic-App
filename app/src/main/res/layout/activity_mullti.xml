<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/abill"
    tools:context="com.example.prashantmaheshwari.firstapp.Mullti"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="330dp"
        android:layout_height="56dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="13dp"
        android:background="@drawable/rectangle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.512"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.017">

        <Button
            android:id="@+id/enquery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:background="@null"
            android:text="For Service Enquiry"
            android:textSize="18sp" />

        <Button
            android:id="@+id/c16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:background="#ff7310"
            android:text="Call" />

    </LinearLayout>

    <android.support.v7.widget.CardView
        android:layout_width="330dp"
        android:layout_height="175dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="8dp"
        android:layout_marginStart="13dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.69"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.211">

        <Button
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="#000"
            android:text="Multi services"
            android:textAlignment="textStart"
            android:textAllCaps="false"
            android:textColor="#fff"
            android:textStyle="normal" />

        <CheckBox
            android:id="@+id/repair55"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:onClick="selectf"
            android:text="Regular service" />

        <CheckBox
            android:id="@+id/repair56"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="selectf"
            android:layout_marginTop="55dp"
            android:text="Car wash" />

        <CheckBox
            android:id="@+id/repair57"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="selectf"
            android:layout_marginTop="75dp"
            android:text="Repair and fixes" />

        <CheckBox
            android:id="@+id/repair59"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="selectf"
            android:layout_marginTop="115dp"
            android:text="Tyres and batteries" />

        <CheckBox
            android:id="@+id/repair58"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="selectf"
            android:layout_marginTop="95dp"
            android:text="Dents, paints and glass works" />

    </android.support.v7.widget.CardView>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="143dp"
        android:layout_marginTop="20dp"
        android:background="#1227c6"
        android:text="Next"
        android:id="@+id/r16"
        android:textColor="#fff"
        android:textSize="20dp" />


</LinearLayout>
